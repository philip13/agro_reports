<div class="flex items-center justify-center h-screen px-6 bg-gray-200 mt-5">
  <div class="w-full max-w-sm p-6 bg-white rounded-md shadow-md">
    <div class="flex items-center justify-center">
      <%= svg("flame", class: "w-10 h-10") %>

      <span class="text-3xl font-semibold text-gray-700">
        <%= t("app_name")%>
      </span>
    </div>
    <h2 class="text-2xl font-semibold text-gray-700 text-center">
      <%= t(".title") %>
    </h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.hidden_field :reset_password_token %>

      <div class="field items-center justify-between mt-4">
        <%= f.label :password, t(".password"), class: "text-sm text-gray-700" %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> <%= t(".characters_minimum") %>)</em>
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "block w-full mt-1 border-gray-200 rounded-md focus:border-indigo-600 focus:ring focus:ring-opacity-40 focus:ring-indigo-500" %>
        <% resource.errors.messages_for(:password).each do |msg| %>
          <div class="font-light text-sm text-red-500 last:pb-3">
            <%= msg %>
          </div>
        <%end%>
      </div>

      <div class="field items-center justify-between mt-4">
        <%= f.label :password_confirmation, t(".password_confirmation"), class: "text-sm text-gray-700" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "block w-full mt-1 border-gray-200 rounded-md focus:border-indigo-600 focus:ring focus:ring-opacity-40 focus:ring-indigo-500" %>
        <% resource.errors.messages_for(:password_confirmation).each do |msg| %>
          <div class="font-light text-sm text-red-500 last:pb-3">
            <%= msg %>
          </div>
        <%end%>
      </div>

      <div class="actions mt-6">
        <%= f.submit t(".submit_button"), class: "w-full px-4 py-2 text-sm text-center text-white bg-indigo-600 rounded-md focus:outline-none hover:bg-indigo-500" %>
      </div>

      <div class="flex items-center justify-between mt-4">
        <%= render "devise/shared/links" %>
      </div>
    <% end %>
  </div>
</div>



