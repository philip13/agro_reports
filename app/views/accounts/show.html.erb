<div>
  <h2 class="text-3xl text-center font-semibold text-gray-700">
    <%= t(".title") %>
  </h2>
  <div class="mt-4 mb-3">
    <div class="flex justify-around items-center">
      <div class="max-w-sm w-3/5 mt-6 overflow-hidden bg-white rounded shadow-lg">
        <div class="px-6 py-4">
          <div class="mb-2 text-xl font-bold text-gray-900">
            <%= @account.name %>
          </div>
          <p class="text-base text-gray-700">
            <%= @account.owner.name %>
          </p>
          <p class="text-base text-gray-700">
            <%= @account.owner.email %>
          </p>
        </div>
        <div class="px-6 pt-4 pb-2">
          <%= link_to edit_account_path(@account), class: "inline-block px-3 py-1 mb-2 mr-2 text-sm font-semibold text-white bg-indigo-600 hover:bg-indigo-900 rounded-full mr-2 mb-2" do %>
            <%= t(".edit") %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
