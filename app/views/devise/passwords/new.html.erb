<div class="flex items-center justify-center h-screen px-6 bg-gray-200 mt-5">
  <div class="w-full max-w-sm p-6 bg-white rounded-md shadow-md">
    <div class="flex items-center justify-center">
      <%= svg("flame", class: "w-10 h-10") %>

      <span class="text-3xl font-semibold text-gray-700">
        <%= t("app_name")%>
      </span>
    </div>
    <h2 class="text-2xl font-semibold text-gray-700 text-center">
      <%= t(".title")%>
    </h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <div class="field items-center justify-between mt-4">
        <%= f.label t("users.attributes.email"), class: "text-sm text-gray-700" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "block w-full mt-1 border-gray-200 rounded-md focus:border-indigo-600 focus:ring focus:ring-opacity-40 focus:ring-indigo-500" %>
        <% resource.errors.messages_for(:email).each do |msg| %>
          <div class="font-light text-sm text-red-500 last:pb-3">
            <%= msg %>
          </div>
        <% end %>
      </div>

      <div class="actions mt-6">
        <%= f.submit t(".send_me_instructions"), class: "w-full px-4 py-2 text-sm text-center text-white bg-indigo-600 rounded-md focus:outline-none hover:bg-indigo-500" %>
      </div>

      <div class="flex items-center justify-between mt-4">
        <%= render "devise/shared/links" %>
      </div>
    <% end %>
  </div>
</div>
