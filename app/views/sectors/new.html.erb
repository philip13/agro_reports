<div class="">
  <h1 class="text-3xl font-semibold text-gray-700 text-center">
    New Sector
  </h1>

  <div class="mt-8">
    <div class="mt-4 flex justify-around items-center">
      <div class="w-full md:w-3/5 p-6 bg-white rounded-md shadow-md">
        <%= form_for([Current.account, @client, @sector]) do |form| %>
          <%= form.hidden_field :client_id, value: @client.id %>


          <div class="mt-4">
            <%= form.label :name, class: "font-medium text-gray-700" %>
            <%= form.text_field :name, class: "w-full mt-2 border-gray-200 rounded-md focus:border-indigo-600 focus:ring focus:ring-opacity-40 focus:ring-indigo-500" %>
            <% @sector.errors.messages_for(:name).each do |message| %>
              <div class="font-light text-sm text-red-500">
                <%= message %>
              </div>
            <% end %>
          </div>

          <div class="mt-4">
            <%= form.label :crop_id, "Crop", class: "w-full mt-2 border-gray-200 rounded-md focus:border-indigo-600 focus:ring focus:ring-opacity-40 focus:ring-indigo-500" %>

            <%= form.select :crop_id, @crops.collect { |c| [c.name, c.id ]}, { prompt: " Please Select"}, { class: "block w-full h-full px-4 py-2 pr-8 leading-tight text-gray-700 bg-white border border-gray-400 rounded appearance-none focus:outline-none focus:border-l focus:border-r focus:bg-white focus:border-gray-500" }  %>
          </div>

          <div class="mt-4">
            <%= form.label :phenological_state, class: "font-medium text-gray-700" %>
            <%= form.text_field :phenological_state, class: "w-full mt-2 border-gray-200 rounded-md focus:border-indigo-600 focus:ring focus:ring-opacity-40 focus:ring-indigo-500" %>
            <% @sector.errors.messages_for(:phenological_state).each do |message| %>
              <div class="font-light text-sm text-red-500">
                <%= message %>
              </div>
            <%end%>
          </div>

          <div class="flex items-center justify-between px-0 py-3">
            <%= link_to 'Back', account_client_sectors_path(Current.account, @client), class: "px-3 py-2 text-sm font-medium text-gray-700 bg-gray-200 rounded-md hover:bg-gray-300 focus:outline-none"%>

            <%= form.submit class: "px-3 py-2 text-sm text-white bg-indigo-600 rounded-md hover:bg-indigo-500 focus:outline-none" %>
          </div>
        <% end %> 
      </div>
    </div>
  </div>
</div>