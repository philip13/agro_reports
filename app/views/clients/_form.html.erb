<div class="mt-8">
    <div class="mt-4 flex justify-around items-center">
      <div class="w-full md:w-3/5 p-6 bg-white rounded-md shadow-md">
        <%= form_for([Current.account, client]) do |form| %>
          <div>
            <%= form.label t("clients.attributes.first_name"), class: "font-medium text-gray-700" %>
            <%= form.text_field :first_name, class: "w-full mt-2 border-gray-200 rounded-md focus:border-indigo-600 focus:ring focus:ring-opacity-40 focus:ring-indigo-500" %>
            <% client.errors.messages_for(:first_name).each do |message| %>
              <div class="font-light text-sm text-red-500 last:pb-3">
                <%= message %>
              </div>
            <% end %>
          </div>

          <div>
            <%= form.label t("clients.attributes.last_name"), class: "font-medium text-gray-700" %>
            <%= form.text_field :last_name, class: "w-full mt-2 border-gray-200 rounded-md focus:border-indigo-600 focus:ring focus:ring-opacity-40 focus:ring-indigo-500" %>
            <% client.errors.messages_for(:last_name).each do |message| %>
              <div class="font-light text-sm text-red-500 last:pb-3">
                <%= message %>
              </div>
            <% end %>
          </div>

          <div>
            <%= form.label t("clients.attributes.email"), class: "font-medium text-gray-700" %>
            <%= form.text_field :email, class: "w-full mt-2 border-gray-200 rounded-md focus:border-indigo-600 focus:ring focus:ring-opacity-40 focus:ring-indigo-500" %>
            <% client.errors.messages_for(:email).each do |message| %>
              <div class="font-light text-sm text-red-500 last:pb-3">
                <%= message %><br/>
              </div>
            <% end %>
          </div>

          <div>
            <%= form.label t("clients.attributes.phone"), class: "font-medium text-gray-700" %>
            <%= form.text_field :phone, class: "w-full mt-2 border-gray-200 rounded-md focus:border-indigo-600 focus:ring focus:ring-opacity-40 focus:ring-indigo-500" %>
            <% client.errors.messages_for(:phone).each do |message| %>
              <div class="font-light text-sm text-red-500 last:pb-3">
                <%= message %>
              </div>
            <% end %>
          </div>

          <div class="flex items-center justify-between px-0 py-3">
            <%= link_to t("back"), account_clients_path(Current.account), class: "px-3 py-2 text-sm font-medium text-gray-700 bg-gray-200 rounded-md hover:bg-gray-300 focus:outline-none"%>

            <%= form.submit class: "px-3 py-2 text-sm text-white bg-indigo-600 rounded-md hover:bg-indigo-500 focus:outline-none" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
