<div class="flex items-center justify-center h-screen px-6 bg-gray-200 mt-5">
  <div class="w-full max-w-sm p-6 bg-white rounded-md shadow-md">
    <div class="flex items-center justify-center">
      <%= svg("flame", class: "w-10 h-10") %>

      <span class="text-3xl font-semibold text-gray-700">AgroReports</span>
    </div>
    
    <h2 class="text-2xl font-semibold text-gray-700 text-center">
      <%= t(".title")%>
    </h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "mt-4") do |f| %>
      <div class="block">
        <%= f.label User.human_attribute_name(:name), class: "text-sm text-gray-700" %>
        <%= f.text_field :name, autofocus: true, class: "block w-full mt-1 border-gray-200 rounded-md focus:border-indigo-600 focus:ring focus:ring-opacity-40 focus:ring-indigo-500" %>
        <% resource.errors.messages_for(:name).each do |message| %>
          <span class="font-light text-sm text-red-500">
            <%= message %>
          </span>
        <% end %>
      </div>

      <div class="block mt-3">
        <%= f.label User.human_attribute_name(:email), class: "text-sm text-gray-700" %>
        <%= f.email_field :email, autocomplete: "email", class: "block w-full mt-1 border-gray-200 rounded-md focus:border-indigo-600 focus:ring focus:ring-opacity-40 focus:ring-indigo-500" %>
        <% resource.errors.messages_for(:email).each do |message| %>
          <span class="font-light text-sm text-red-500">
            <%= message %>
          </span>
        <% end %>
      </div>

      <div class="block mt-3">
        <%= f.label User.human_attribute_name(:password), class: "text-sm text-gray-700" %>
        <% if @minimum_password_length %>
          <em class="text-sm text-gray-700">
            (<%= @minimum_password_length %> <%= t(".characters_minimum") %>
          </em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: "block w-full mt-1 border-gray-200 rounded-md focus:border-indigo-600 focus:ring focus:ring-opacity-40 focus:ring-indigo-500"%>
        <% resource.errors.messages_for(:password).each do |message| %>
          <span class="font-light text-sm text-red-500">
            <%= message %>
          </span>
        <% end %>
      </div>

      <div class="block mt-3">
        <%= f.label User.human_attribute_name(:password_confirmation), class: "text-sm text-gray-700" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "block w-full mt-1 border-gray-200 rounded-md focus:border-indigo-600 focus:ring focus:ring-opacity-40 focus:ring-indigo-500" %>
        <% resource.errors.messages_for(:password_confirmation).each do |message| %>
          <span class="font-light text-sm text-red-500">
            <%= message %>
          </span>
        <% end %>
      </div>

      <div class="block mt-3">
        <%= f.fields_for :account, Account.new(owner: resource) do |account| %>
          <%= account.label :name, t(".account_name"), class: "text-sm text-gray-700" %>
          <%= account.text_field :name, class: "block w-full mt-1 border-gray-200 rounded-md focus:border-indigo-600 focus:ring focus:ring-opacity-40 focus:ring-indigo-500" %>
          <% resource.errors.messages_for("account.name").each do |message| %>
            <span class="font-light text-sm text-red-500">
              <%= message %>
            </span>
          <% end %>
        <% end %>
      </div>
      <div>

      <div class="actions mt-6">
        <%= f.submit t(".sign_up"), class: "w-full px-4 py-2 text-sm text-center text-white bg-indigo-600 rounded-md focus:outline-none hover:bg-indigo-500" %>
      </div>

      <div class="flex items-center justify-end mt-4">
        <%= render "devise/shared/links" %>
      </div>
    <% end %>
  </div>
</div>



